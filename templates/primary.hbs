<style>
   .im1-template {
      padding-top: 1rem;
      text-align: center;
      height: 100%;
      color: white;      
   }

   .im1-template__img-container {
      position: relative;
      z-index: 500;
      width: 80px;
      height: 80px;
      border-radius: 50%;
      margin-top: 0%;
      margin-left: auto;
      margin-right: auto;
      background-color: black;
      border: 5px solid #FFFFFF;
   }
   .im1-template__profile-image {
      width: 100%;
      height: 100%;
      border-radius: inherit;
   }

   .im1-template__profile-info {
      z-index: 100;
      transform: translateY(-40%);
      width: 75%;
      padding-left: 10px;
      padding-right: 10px;
      padding-top: 40px;
      margin-left: auto;
      margin-right: auto;
      background-color: #000000;
      border-radius: 12px;
   }
   .im1-template__profile-username {
      font-size: 12px;
      color: #FFFFFF;
   }
   .im1-template__profile-bio {
      color: #000000;
      margin-top: 0px;
      padding: 0 35px;
      font-size: 12px;
      line-height: 1.2;
   }
   .im1-template__custom-link {
      text-align: left;
      padding: 5px 25px;
      margin-bottom: 5px;
   }
   .im1-template__custom-link .im1-template_custom-link-title{
      font-size: 14px;
      margin: 0%;
      padding: 0%;
      line-height: 0;
      color: #000000;
   }
   .im1-template__custom-link .im1-template_custom-link-description {
      font-size: 12px;
      padding: 0%;
      margin-top: 12px;
      line-height: 1.2;
      color: #5B5B5B;
   }
   .im1-template__social-icon{
      margin-top: 5px;
   }
</style>

<div data-template-name="primary" class="im1-template">
   <div class="im1-template__img-container">
      <img class="im1-template__profile-image" src="https://randomuser.me/api/portraits/med/women/65.jpg" alt="" />
   </div>
   <div class="im1-template__profile-info">
      <a class="im1-template__profile-username">@{{ user.name }}</a>
      <div class="im1-template__social-links">
         {{#each socialLinks}}
            <a href="{{ this.link }}">
               <img class="im1-template__social-icon" src="{{ this.icon }}" alt="" />
            </a>
         {{/each}}
      </div>
   </div>
   <p class="im1-template__profile-bio">{{ profile.bio }}</p>

   {{#each customLinks}}
      <a href="{{ this.url }}">
         <div class="im1-template__custom-link">
            <h2 class="im1-template_custom-link-title">{{ this.title }}</h2>
            <p class="im1-template_custom-link-description">{{ this.description }}</p>
         </div>
      </a>
   {{/each}}
</div>
