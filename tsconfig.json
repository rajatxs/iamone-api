{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@utils/*": ["src/@utils/*"],
      "@classes/*": ["src/@classes/*"],
      "@validations/*": ["src/@validations/*"],
      "@pipes/*": ["src/@pipes/*"],
      "@config/*": ["src/@config/*"],
      "@http-request/*": ["src/http-request/*"]
    },
    "incremental": true,
    "skipLibCheck": true
  }
}
